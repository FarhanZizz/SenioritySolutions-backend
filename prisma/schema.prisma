// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(uuid())
  name      String
  phone     Int
  email     String      @unique
  password  String
  role      String      @default("user")
  reviews   Review[]
}

model Service {
  id          String       @id @default(uuid())
  name        String
  description String
  price       Float
  reviews     Review[] 
}

model Booking {
  id          String     @id @default(uuid())
  userId      String
  serviceId   String
  scheduledAt DateTime
  status      String     @default("pending")
  caregiver   String
  notes       String?
}



model Review {
  id        String       @id @default(uuid())
  userId    String
  serviceId String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
  service   Service  @relation(fields: [serviceId], references: [id])
}
